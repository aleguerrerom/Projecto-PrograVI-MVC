@model Projecto_PrograVI_MVC.Models.AccountModel

@{
    ViewBag.Title = "Olvido de Clave";
}

<h2>Olvido de Clave</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    if (ViewBag.Message != null)
    {
        <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Message");
            };
        </script>
    }


    <div class="form-horizontal">
        <h4>Favor cambiar la clave</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

      
        <div class="form-group">
            @Html.LabelFor(model => model.VLSClave, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.VLSClave, new { htmlAttributes = new { @class = "form-control", @PlaceHolder = "Ingrese clave" } })
                @Html.ValidationMessageFor(model => model.VLSClave, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.VLSConfirmar, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.VLSConfirmar, new { htmlAttributes = new { @class = "form-control", @PlaceHolder = "Confirme su clave" } })
                @Html.ValidationMessageFor(model => model.VLSConfirmar, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Index" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

