@model Projecto_PrograVI_MVC.Models.AccountModel 

@{
    ViewBag.Title = "Pago";
}

<h2>Pago de Reparacion</h2>
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
@section Scripts {
    <script src="~/scripts/jquery-1.12.4.min.js"></script>
    <script src="~/scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/scripts/Cargar_Tarjeta.js"></script>
}

@using (Html.BeginForm())
{
    if (ViewBag.Message != null)
    {
        <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Message");
            };
        </script>
    }
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Presione boton para cargar tarjeta cargada previamente, o ingrese otra tarjeta si desea</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.VLSCorreo, htmlAttributes: new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                <input id="txtcorreo" />
            </div>
        </div>
      
        <div class="form-group">
            @Html.LabelFor(model => model.VLSNumTarjeta, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.VLSNumTarjeta, new { htmlAttributes = new { @class ="form-control", @id="txtNumero" } })
                @Html.ValidationMessageFor(model => model.VLSNumTarjeta, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.VLSNomTarjeta, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.VLSNomTarjeta, new { htmlAttributes = new { @class = "form-control", @id = "Nombre" } })
                @Html.ValidationMessageFor(model => model.VLSNomTarjeta, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.VLSFechaExp, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.VLSFechaExp, new { htmlAttributes = new { @class = "form-control", @id = "Fecha" } })
                @Html.ValidationMessageFor(model => model.VLSFechaExp, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.VLSCodigoTarjeta, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.VLSCodigoTarjeta, new { htmlAttributes = new { @class = "form-control", @id = "Codigo" } })
                @Html.ValidationMessageFor(model => model.VLSCodigoTarjeta, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" id="btnCargar" value="CargarTarjeta" class="btn btn-default" @*onclick="location.href='@Url.Action("CargarTarjeta","Reparacion")';return false;"*@ />
                <input type="button" id="Pago" value="Pago" class="btn btn-default" onclick="location.href='@Url.Action("Index","Account")';return false;" />
                <input type="button" id="Cancel" value="Cancel" class="btn btn-default" onclick="location.href='@Url.Action("Pago","Reparacion")';return false;" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

